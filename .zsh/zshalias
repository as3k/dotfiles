### --- GENERAL NAVIGATION ---
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias ~="cd ~"
alias ll="ls -lh"
alias la="ls -la"
alias l="ls -CF"

### --- SYSTEM + FILE MANAGEMENT ---
alias c="clear"
alias h="history"
alias mkdirp="mkdir -p"
alias please="sudo"  # for fun
alias cpv="rsync -ah --info=progress2"  # copy with progress

### --- EDITORS ---
alias v="nvim"
alias vim="nvim"

### --- NETWORKING ---
alias myip="curl ifconfig.me"
alias ports="lsof -i -P -n | grep LISTEN"
alias flushdns="sudo dscacheutil -flushcache; sudo killall -HUP mDNSResponder"

### --- GIT SHORTCUTS ---
alias gst="git status"
alias add="git add ."
alias commit="git commit -m"
alias gco="git checkout"
alias branch="git branch"
alias gd="git diff"
alias pull="git pull origin"
alias push="git push origin"
alias gl="git log --oneline --graph --all"
alias gra="git remote add "
alias gpsu="git push -u origin $(git rev-parse --abbrev-ref HEAD)"

### --- DOCKER / DEV ---
alias dcu="docker compose up"
alias dcd="docker compose down"
alias dcb="docker compose build"
alias dcr="docker compose run --rm"
alias dcl="docker compose logs -f"
alias dcps="docker compose ps"
alias dcx="docker compose exec"
alias dps="docker ps"
alias ds="docker stop \$(docker ps -q)"
alias drm="docker rm \$(docker ps -a -q)"
alias drmi="docker rmi \$(docker images -q)"

### --- NPM / NODE / YARN ---
alias nr="npm run"
alias ni="npm install"
alias nis="npm install --save"
alias nid="npm install --save-dev"
alias yd="yarn dev"
alias ys="yarn start"
alias ya="yarn add"
alias yis="yarn install --save"
alias yga="yarn global add"
alias ygs="yarn global remove"

### --- ZSH & CONFIG ---
alias zc="code ~/.zshrc"
alias zs="source ~/.zshrc"
alias za="code ~/.zsh_aliases"

### --- OTHER UTILITIES ---
alias updatebrew="brew update && brew upgrade && brew cleanup"
alias serve="python3 -m http.server"  # quick file server
alias timestamp="date +%s"
alias epoch="date -r"

### --- Updates etc ---   
alias uu="apt update && apt upgrade -y"
alias bu="brew update && brew upgrade"

### --- TMUX ---
alias tma="tmux attach -t"
alias tmn="tmux new -s"
alias tmls="tmux ls"
alias tmks="tmux kill-session -t"

### --- openspec --- 
alias ospop="printf '%s\n' 'Please read openspec/project.md and help me fill it out with details about my project, tech stack, and conventions'"
alias oshow="printf '%s\n' 'Please explain the OpenSpec workflow from openspec/AGENTS.md and how I should work with you on this project'"

