## Set IP variable for local IP
IP="$(hostname -I | cut -f2 -d ' ')"
DIP="$(hostname -I)"

alias ip='echo $IP'

## location aliases
alias udv='cd ~/www/p/udemy-vue'
alias pv2='cd ~/www/p/portfolio/wp-content/themes/pv2'
alias lw='cd ~/www/p/lifewhile/wp-content/themes/daze-child'

## unix aliases
alias c='clear'
alias e='$EDITOR'
alias lA='ls -A'
alias ln='ln -v'
alias ll='ls -al'
alias lp='ls -ap'
alias lvserv='php artisan serv --host=$IP --port=8000'
alias mkdir='mkdir -p'
alias v='$VISUAL'
alias zs='source ~/.zshrc'

## sync vim and zsh dotfiles to repo 
alias vsync='rsync -u -v ~/.vimrc ~/.shell/.vim/.vimrc'
alias zsync='rsync -u -v ~/.zshrc ~/.shell/.zshrc'

## git specific aliases
alias gi='git init'
alias gpsu='git push --set-upstream'
alias grao='git remote add origin'
alias grurl='git remote get-url --all'
alias add='git add .'
alias branch='git branch'
alias branchD='git branch -D'
alias checkout='git checkout'
alias commit='git commit -m'
alias diff='git diff'
alias glg='git log'
alias merge='git merge'
alias push='git push'
alias pull='git pull'
alias stash='git stash save'
alias gst='git status'

## OS App Specifics
alias rr='ranger'
